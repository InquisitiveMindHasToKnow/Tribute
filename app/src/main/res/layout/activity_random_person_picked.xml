<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/randomly_selected_person_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/randomly_selected_person_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/randomly_selected_person_background"
        android:layout_alignTop="@id/randomly_selected_person_background"
        android:layout_alignRight="@id/randomly_selected_person_background"
        android:layout_alignBottom="@id/randomly_selected_person_background"
        android:text=""
        android:gravity="center" />

</RelativeLayout>