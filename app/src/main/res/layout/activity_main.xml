<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/welcome_omar"
        android:textSize="32sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/main_page_image_and_buttons_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/welcome_textview"

        >
    <ImageView
        android:id="@+id/welcome_screen_imageview"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mainpagedie"
         />

    <Button
        android:id="@+id/main_page_view_fellow_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="56dp"
        android:text="View Fellow List"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/main_page_generate_person_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/textColor"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:text="Generate Person List"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/main_page_about_the_creator_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/textColor"
            android:layout_marginTop="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="About The Creator"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>