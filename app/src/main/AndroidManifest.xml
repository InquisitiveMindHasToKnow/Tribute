<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ohmstheresistance.tribute">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tributehand"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".activities.UserRegistrationActivity"></activity>
        <activity
            android:name=".activities.AboutTheCreator"
            android:label="@string/title_activity_about_the_creator" />
        <activity android:name=".activities.AnxietyBuilderActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.RandomPersonPickedActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.EditPersonDataActivity" android:windowSoftInputMode="adjustNothing" android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activities.AddPersonActivity" android:windowSoftInputMode="adjustNothing" android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activities.RandomFellowPickedActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.AcceptanceSpeechActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.ViewFellowListActivity" android:windowSoftInputMode="adjustNothing" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.CreateListActivity" android:windowSoftInputMode="adjustNothing" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".intro.SplashWelcome" android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity" />
    </application>

</manifest>